<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/get_city_id"
        android:text="get city id"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/use_city_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/get_city_id"
        android:text="use city id"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <Button
        android:id="@+id/use_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/use_city_id"
        android:text="use city name"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/city_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/use_city_id"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Please enter city name or id"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/city_input"
        android:layout_margin="10dp"
        android:scrollbarSize="10dp"
        android:id="@+id/weather_list"/>


</RelativeLayout>